{% extends "admin/adminLayout.njk" %}

{% block content %}

<header class="header_admin">
    <div class="header_container">
        <div class="header_grid">
            <a class="foodfy_logo">Foodfy</a>
            <a href="/admin/recipes">Recipes</a>
            <a href="/admin/chefs" style="filter: brightness(50%)">Chefs</a>
        </div>
    </div>
</header>

<div class="admin_manage_chefs">
    <div class="admin_manage_chefs_container">
        <h1>
            Manage Chefs
        </h1>
    </div>
</div>

<section class="chefs_adm">
    <div class="chefs_container_adm">

        {% for item in items %}
            <div class="chef_adm" id="{{ item.id }}">
                <div class="chef__image-container_adm">
                    <img src="{{ item.avatar_url }}" alt="{{ item.name }}">               
                </div>
                <div class="chef__content_adm">
                    <p class="chef-name_adm"> 
                        {{ item.name }}
                    </p>
                    <a href="/admin/chefs/{{ item.id }}" class="chef-total_recipes_adm">
                        Show
                    </a>
                </div>
            </div>
        {% endfor %}
        
    </div>
</section>

{% endblock %}