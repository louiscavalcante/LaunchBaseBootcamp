{% extends "layout.njk" %}

{% block about %}

<div id="wrapper" class="video">
    <h1>{{ item.title }}</h1>
</div>

<section class="video">

    <div class="card_video" id="{{item.id}}">
        <div class="card__video-container">
            <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/{{ item.id }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>            
        </div>
        <div class="card__content">
            <p>{{item.title}}</p>
        </div>
        <div class="card__info">
            <p>{{item.duration}}</p>
            <p class="card__price">{{item.price}}</p>
        </div>
    </div>

</section>

{% endblock %}