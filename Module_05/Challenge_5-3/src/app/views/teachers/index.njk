{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

    <div class="header">

        <a class="button" href="/teachers/create">New</a>
        <form action="/teachers" method="GET">
            <input type="text"
                name="filter"
                placeholder="Name or Fields"
                value="{{ filter }}"
            >
            <button type="submit">Filter</button>
        </form>
    
    </div>
    
   <table width="100%">
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Fields</th>
                <th>Students</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})"></span>
                        {{ teacher.name }}</td>
                    <td>{{ teacher.subjects_taught }}</td>
                    <td>{{ teacher.total_students }}</td>
                    <td><a href="/teachers/{{ teacher.id }}">Show</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}