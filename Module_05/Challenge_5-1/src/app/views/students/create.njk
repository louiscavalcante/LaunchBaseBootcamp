{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/students">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/9489328/500x500) no-repeat center center / cover">

    </section>
    <section class="details">

    <h3>
        New Student
    </h3>

        <div class="item_container">

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input
                        type="url"
                        name="avatar_url"
                        placeholder="http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Student</div>
                <div>
                    <input 
                        type="text"
                        name="name"
                    >
                </div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                        type="email"
                        name="email"
                    >
                </div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input
                        type="date"
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>School Year</div>
                <div>
                    <select name="schoolYear">
                        <option value="" selected>
                                -- Select --
                        </option>
                        <option value="5">
                                5th Grade
                        </option>
                        <option value="6">
                                6th Grade
                        </option>
                        <option value="7">
                                7th Grade
                        </option>
                        <option value="8">
                                8th Grade
                        </option>
                        <option value="9">
                                9th Grade
                        </option>
                        <option value="10">
                                10th Grade
                        </option>
                        <option value="11">
                                11th Grade
                        </option>
                        <option value="12">
                                12th Grade
                        </option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Weekly Workload</div>
                <div>
                    <input
                        type="number"
                        name="workload"
                        placeholder="Type your Weekly Workload in hours."
                    >
                </div>
            </div>

            <div class="item">
                <button type="submit">Save</button>
            </div>
            
        </div>

    </section>
</form>

{% endblock content %}