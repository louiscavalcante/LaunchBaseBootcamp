{% extends "layout.njk" %}

{% block recipes %}

<header>
    <div class="links">
        <a class="foodfy" href="/">Foodfy</a>
        <div class="menu">
            <a href="/about">About</a>
            <a href="/recipes"><strong>Recipes</strong></a>
        </div>
    </div>
</header>

<section class="cards_recipes">

    {% for item in items %}
    
        <div class="card_recipes" id="">
            <div class="card__image-container_recipes">
                <img src="{{ item.image }}" alt="{{ item.title }}">               
            </div>
            <div class="card__content_recipes">
                <p class="title-string_recipes"> 
                    {{ item.title }}
                </p>
                <p class="author-string_recipes">
                    {{ item.author }}
                </p>
            </div>

            <div class="details_container">

                <div class="details_main_container">
                    <a class="details_main_message">
                        Ingredients
                    </a>
                </div>

                <div class="details_paragraph">
                    <ul>
                        {% for item in item.ingredients %}
                        <li>
                            {{ item + ';'}}
                        </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="details_main_container">
                    <a class="details_main_message">
                        Preparation
                    </a>
                </div>

                <div class="details_paragraph">
                    {% for item in item.preparation %}
                    <p>
                        {{ item }}
                    </p>
                    {% endfor %}
                </div>

                <div class="details_main_container">
                    <a class="details_main_message">
                        Information
                    </a>
                </div>

                <div class="details_paragraph_information">
                    <p>
                        {{ item.information }}
                    </p>
                </div>
                
            </div>
        
        </div>

    {% endfor %}
    
</section>

{% endblock %}