{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/9489328/500x500) no-repeat center center / cover">

    </section>
    <section class="details">

    <h3>
        New Teacher
    </h3>

        <div class="item_container">

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input
                        type="url"
                        name="avatar_url"
                        placeholder="http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Teacher</div>
                <div>
                    <input 
                        type="text"
                        name="name"
                        placeholder="Type your name here"
                    >
                </div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input
                        type="date"
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>Scholarity</div>
                <select name="scholarity">
                    <option value="" selected>-- Select --</option>
                    <option value="High School">High School</option> 
                    <option value="College Education">College Education</option>
                    <option value="Master's Degree">Master's Degree</option>
                    <option value="Doctorate Degree">Doctorate Degree</option>
                </select>
            </div>

            <div class="item">
                <div>Type of Classes</div>
                <div>
                    <span><input type="radio" name="classes" value="online" checked>Online Classes</span>
                    <span><input type="radio" name="classes" value="tradicional">Tradicional Classes</span>
                </div>
            </div>

            <div class="item">
                <div>Fields</div>
                <div>
                    <input
                        type="text"
                        name="fields"
                        placeholder="Type your teaching fields separated by comma"
                    >
                </div>
            </div>
            <div class="item">
                <button type="submit">Save</button>
            </div>
            
        </div>

    </section>
</form>

{% endblock content %}