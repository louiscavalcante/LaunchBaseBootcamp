<div class="item">
    <div>Recipe Image</div>
    <div>
        <input
            type="url"
            name="image"
            placeholder="http://"
            value="{{ recipe.image }}"
        >
    </div>
</div>

<div class="item">
    <div>Ingredients</div>
    <div>
        <ul id="addStepIngredient">
            {% for ingredient in recipe.ingredients %}
                <input
                    type="text"
                    name="ingredients"
                    value="{{ ingredient }}"
                >
            {% endfor %}
        </ul>
    </div>
    <div class="addIngredient">
        Add Ingredients
    </div>
</div>

<div class="item">
    <div>Preparation</div>
    <div>
        <ul id="addStepPreparation">
            {% for step in recipe.preparation %}
                <input
                    type="text"
                    name="preparation"
                    value="{{ step }}"
                >
            {% endfor %}
        </ul>
    </div>
    <div class="addPreparationSteps">
        Add Preparation Step
    </div>
</div>

<div class="item">
    <div>Information</div>
    <div class="informationEdit">
        <textarea 
            name="information"
            value="{{ recipe.information }}"
        >{{ recipe.information }}</textarea>
    </div>
</div>